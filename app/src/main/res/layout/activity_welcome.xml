<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="140dp"
        android:text="Welcome \nto \nSmartKicker"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonWelcomeRegister"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginStart="140dp"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="140dp"
            android:background="@drawable/round_button"
            android:onClick="onTouchRegister"
            android:text="Let's Go!"
            android:textAllCaps="false"
            android:textColor="@color/colorSignUpButtonText"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textViewWelcomeBottom" />

        <TextView
            android:id="@+id/textViewWelcomeBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="17sp"
            android:text="Not the first time here?"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonToLoginWelcome"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/buttonToLoginWelcome"
            android:layout_width="66dp"
            android:layout_height="37dp"
            android:background="@android:color/transparent"
            android:onClick="onClickLogin"
            android:text="log in"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textColor="@color/colorSwitchSignUpAndLogin"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewWelcomeBottom" />

    </android.support.constraint.ConstraintLayout>