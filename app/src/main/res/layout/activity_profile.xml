<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ProfileActivity">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/statisticsSmartTabLayout"
        android:background="@color/colorSignUpBackgroundBright"
        app:stl_underlineColor="@color/colorWhite"
        app:stl_underlineThickness="1dp"
        app:stl_overlineColor="@color/colorWhite"
        app:stl_overlineThickness="1dp"
        app:stl_dividerColor="@color/colorWhite"
        app:stl_indicatorColor="@color/colorSignUpButtonText"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorInFront="true"
        app:stl_titleOffset="auto_center"
        app:stl_distributeEvenly="true"
        app:stl_customTabTextLayoutId="@layout/stl_text"
        app:stl_customTabTextViewId="@id/custom_text"
        >
    </com.ogaclejapan.smarttablayout.SmartTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/statisticsViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statisticsSmartTabLayout"
        android:layout_above="@id/statisticsBottomNavigationView"
        />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statisticsBottomNavigationView"
        app:centre_button_icon="@drawable/ic_menu_football_icon"
        app:centre_button_color="@color/colorSignUpBackgroundBright"
        app:inactive_centre_button_icon_color="@color/colorWhite"
        app:space_item_icon_size="@dimen/space_item_icon_only_size"
        app:active_item_color="@color/colorSignUpButtonText"
        app:inactive_item_color="@color/colorWhite"
        android:layout_alignParentBottom="true"
        >
    </com.luseen.spacenavigation.SpaceNavigationView>

</RelativeLayout>