<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.CardView"
        android:id="@+id/cardView"
    >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSignUpButton"
            android:padding="2dp">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:id="@+id/leaderboardRankingTextView"
                android:text=""
                android:textSize="32sp"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
            />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/profilePictureImageViewLeaderboard"
                android:src="@drawable/profile_picture_preview"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorSignUpButtonText"
                app:civ_circle_background_color="@color/colorWhite"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/leaderboardRankingTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leaderboardPlayerName"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/profilePictureImageViewLeaderboard"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/leaderboardScoreTextView"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leaderboardScoreTextView"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/profilePictureImageViewLeaderboard"
                app:layout_constraintTop_toBottomOf="@id/leaderboardPlayerName"
                app:layout_constraintBottom_toBottomOf="parent"
            />

        </android.support.constraint.ConstraintLayout>

    </android.support.design.card.MaterialCardView>

</LinearLayout>