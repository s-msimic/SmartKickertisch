<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ResultActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/discardGameButton"
        android:text="Discard Game"
        android:textSize="16sp"
        android:textColor="@color/colorSignUpButtonText"
        android:textAllCaps="false"
        android:background="@drawable/round_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.9"
    />

    <EditText
        android:id="@+id/editTextResultRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:gravity="center"
        android:hint="Result team red"
        android:inputType="number"
        android:textColor="@color/colorSignUpError"
        android:textColorHint="@color/colorSignUpError"
        android:backgroundTint="@color/colorSignUpError"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSoccerField2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1"
    />

    <ImageView
        android:id="@+id/imageViewSoccerField2"
        android:layout_width="324dp"
        android:layout_height="191dp"
        app:srcCompat="@drawable/soccerfield"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
    />

    <EditText
        android:id="@+id/editTextResultBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:gravity="center"
        android:hint="Result team blue"
        android:inputType="number"
        android:textColor="@color/colorSwitchSignUpAndLogin"
        android:textColorHint="@color/colorSwitchSignUpAndLogin"
        android:backgroundTint="@color/colorSwitchSignUpAndLogin"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewSoccerField2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
    />

    <Button
        android:id="@+id/buttonCommitResult"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:onClick="onClickCommitResult"
        android:text="Commit "
        android:textSize="17sp"
        android:textAllCaps="false"
        android:textColor="@color/colorSignUpButtonText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextResultBlue"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>